
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp">
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How far are you willing to look?"
             android:textSize="10sp"
            android:textColor="@android:color/black"
         />

         <ImageView
             android:id="@+id/imageView"
             android:layout_width="match_parent"
             android:layout_height="300dp"
             android:layout_weight="0.02"
             fab:srcCompat="@mipmap/ic_launcher"
         />
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Witch days are you available?"
            android:textSize="10sp"
            android:layout_margin="6dp"
            android:textColor="@android:color/black"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <CheckBox android:id="@+id/checkbox_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text=""
            android:layout_weight="1"
        />
          <CheckBox android:id="@+id/checkbox_tuesday"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:layout_weight="1"
              />
          <CheckBox android:id="@+id/checkbox_wed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:layout_weight="1"
              />
          <CheckBox android:id="@+id/checkbox_th"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:layout_weight="1"
              />
          <CheckBox android:id="@+id/checkbox_fr"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:layout_weight="1"
              />
          <CheckBox android:id="@+id/checkbox_sa"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:layout_weight="1"
              />
          <CheckBox android:id="@+id/checkbox_sun"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text=""
              android:layout_weight="1"
              />
      </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M"
                android:textSize="10sp"
                android:textColor="@android:color/black"

                android:layout_weight="1"
                android:textAlignment="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="T"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="F"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sa"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textAlignment="center"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Su"
                android:textSize="10sp"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginRight="9dp"

                />
            </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many hourd are you available each day?"
            android:textSize="10sp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="6dp"/>


        <EditText
            android:id="@+id/hours_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

        <Button
            android:id="@+id/findPartyBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="6dp"
            android:layout_gravity="bottom|center"
            android:text="Great lets go"
        />
    </LinearLayout>



